{{define "body"}}
	<div id="navbar" class="navbar-color">
		<div class="navbar-container grid-container _flex-row _main-space-between _cross-stretch">

			<a href="{{route "app.index"}}" class="_flex-row _cross-center show-sm-upper">
				<img class="logo" src="/-/logo-w-2.svg" height="45">
			</a>
			<a href="{{route "app.index"}}" class="_flex-row _cross-center hide-sm-upper">
				<img class="logo" src="/-/logo-s.svg" height="45">
			</a>
			<div class="_flex-row _cross-center _main-end">
			{{if .Me}}
