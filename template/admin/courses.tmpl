{{define "app-body"}}
<div id="course-list">
	<div class="grid-container _flex-column">

		<div class="acourse-header">
			Course List
		</div>

		{{template "pagination" .Paginate}}

		<!-- Table -->
		<div class="flex-row">
			<table class="acourse-block-big">
				<thead>
					<th>ID</th>
					<th>Image</th>
					<th>Title</th>
					<th>Owner</th>
					<th>Type</th>
					<th>Price</th>
					<th>Discount</th>
					<th>Created At</th>
					<th>Updated At</th>
				</thead>
				<tbody>
					{{range .Courses}}
						<tr>
							<td data-column="ID" class="acourse-word-breakeable" style="min-width: 120px">{{.ID}}</td>
							<td data-column="Image">
								<img class="_img-cover" src="{{.Image}}" onerror="this.src = '{{fallbackImage}}'" width="200" height="100">
							</td>
							<td data-column="Title" class="acourse-word-breakeable" style="min-width: 120px">{{.Title}}</td>
							<td data-column="Owner" class="acourse-word-breakeable _align-center" style="min-width: 120px">
								<img class="acourse-circle _img-cover" src="{{.Owner.Image}}" onerror="this.src = '{{fallbackImage}}'">
								<br>
								{{.Owner.Username}}
							</td>

							</td>
							<td data-column="Type">{{.Type | courseType}}</td>
							<td data-column="Price">
								{{.Price | currency}}
								{{if .Option.Discount}}
									({{.Discount}})
								{{end}}
							</td>
							<td data-column="Discount">
								{{if .Option.Discount}}
									Yes
								{{else}}
									No
								{{end}}
							</td>
							<td data-column="Created At">{{.CreatedAt | dateTime}}</td>
							<td data-column="Updated At">{{.UpdatedAt | dateTime}}</td>
						</tr>
					{{end}}
				</tbody>
			</table>
		</div>

		{{template "pagination" .Paginate}}

	</div>
</div>
{{end}}
