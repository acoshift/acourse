{{define "app-body"}}
<div id="payment">
	<div class="grid-container _flex-column">

		<div class="acourse-header">
			Payments
		</div>

		{{template "pagination" .Paginate}}

		<!-- Table -->
		<div class="flex-row">
			<table class="acourse-block-big">
				<thead>
					<tr>
						<th>ID</th>
						<th>Course</th>
						<th>Slip</th>
						<th>User</th>
						<th>Price</th>
						<th>Original Price</th>
						<th>Status</th>
						<th>Created At</th>
						<th>Updated At</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{{range .Payments}}
						<tr>
							<td data-column="ID">{{.ID}}</td>
							<td data-column="Course">
								<a href="{{route "app.course" .Course.Link}}" target="_blank">
									<img
										class="_img-cover"
										src="{{.Course.Image}}"
										onerror="this.src = '{{fallbackImage}}'"
										width="200"
										height="100">
								</a>
							</td>
							<td data-column="Slip">
								{{if .Image}}
									<a href="{{.Image}}" target="_blank">
										<img
											class="_img-cover"
											src="{{.Image}}"
											onerror="this.src = '{{fallbackImage}}'"
											width="200"
											height="100">
									</a>
								{{else}}
									<img
											class="_img-cover"
											src="{{fallbackImage}}"
											width="200"
											height="100">
								{{end}}
							</td>
							<td class="acourse-word-breakeable" style="min-width: 100px">
								<img
									src="{{.User.Image}}"
									class="acourse-circle acourse-block _img-cover"
									onerror="this.src = '{{fallbackImage}}'">
								<br>
								<span>
									<div class="_font-bold">{{.User.Username}}</div>
									<div>{{.User.Email}}</div>
								</span>
							</td>
							<td>{{.Price | currency}}</td>
							<td>{{.OriginalPrice | currency}}</td>
							<td data-column="Status">
								{{if eq .Status pending}}
									Pending
								{{else if eq .Status accepted}}
									Accepted
								{{else if eq .Status rejected}}
									Rejected
								{{else if eq .Status refunded}}
									Refunded
								{{end}}
							</td>
							<td data-column="Created At">{{.CreatedAt | dateTime}}</td>
							<td data-column="Updated At">{{.UpdatedAt | dateTime}}</td>
							<td data-column="Actions">
								{{if eq .Status pending}}
									<form method="POST" class="acourse-block">
										<input type="hidden" name="id" value="{{.ID}}">
										<input type="hidden" name="action" value="accept">
										<button class="acourse-button -positive _font-main _full-width">Accept</button>
									</form>
									<a href="reject?id={{.ID}}">
										<button class="acourse-button -negative _font-main _full-width">Reject</button>
									</a>
								{{else}}
									<div>-</div>
								{{end}}
							</td>
						</tr>
					{{end}}
				</tbody>
			</table>
		</div>

		{{template "pagination" .Paginate}}

</div>
{{end}}
