{{define "app-body"}}
<div id="payment-reject">
  <div class="acourse-card acourse-segment acourse-block-bigger col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="acourse-header _color-main _align-center">
        Edit Reject Message
    </div>
    <form method="POST" enctype="multipart/form-data">
        {{$.XSRF}}
        <input type="hidden" name="ID" value="{{.ID}}">
        <input type="hidden" name="Action" value="reject">
        <div class="input-field _flex-column">
            <label>Message</label>
            <textarea rows="3" class="acourse-input" name="Message"></textarea>
        </div>
        <button class="acourse-button -negative _font-main _full-width"  type="submit">Submit</button>
    </form>
  </div>
</div>
{{end}}

{{define "app-script"}}{{end}}
{{define "app-style"}}
<style>
  #payment-reject {
    padding-top: 32px;
    min-height: calc(100vh - 311px);
  }
</style>
{{end}}
